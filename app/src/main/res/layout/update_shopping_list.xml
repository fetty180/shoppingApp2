<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/itemsTextView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/purple_200"
        android:text="Item Name"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />
    <EditText
        android:id="@+id/itemShoppingList"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Item Name"
        android:ems="12"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/itemsTextView"
        app:layout_constraintTop_toTopOf="@+id/itemsTextView"
        />
    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Item price"
        android:textColor="@color/purple_200"
        android:layout_marginStart="20dp"
        android:textSize="14dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/itemsTextView"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/priceShoppingList"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="12"
        android:hint="Item price"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/priceTextView"
        app:layout_constraintTop_toBottomOf="@+id/itemsTextView" />
    <TextView
        android:id="@+id/NumitemsTextView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/purple_200"
        android:layout_marginStart="20dp"
        android:text="Num Items"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/priceTextView"
        />

    <EditText
        android:id="@+id/numberOfItems"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="12"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/NumitemsTextView"
        app:layout_constraintTop_toBottomOf="@+id/priceTextView"
         />
    <Button
        android:id="@+id/saveItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="save Item"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintTop_toBottomOf="@+id/NumitemsTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>